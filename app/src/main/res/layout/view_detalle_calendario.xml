<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_margin="5dp"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        app:ignore="NamespaceTypo">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/katzen_rosa_fuerte"
                    android:fontFamily="@font/varela"
                    android:textStyle="bold"
                    android:text="ENERO"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:backgroundTint="@color/katzen_rosa_fuerte"
                    android:src="@drawable/ic_calendar_rosa"/>
            </LinearLayout>



            <TextView
                android:id="@+id/eventosTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="35dp"
                android:lines="2"
                android:gravity="center"
                android:textColor="@color/katzen_rosa_fuerte"
                android:fontFamily="@font/varela"
                android:textStyle="bold"
                android:text="2 Eventos"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>
